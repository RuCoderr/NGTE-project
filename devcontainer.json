{
    "name": "Telegram Bot Environment",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "portsAttributes": {
        "8080": {
            "label": "Ping Server",
            "onAutoForward": "openPreview"
        }
    },
    "forwardPorts": [8080],
    "postCreateCommand": "pip install -r requirements.txt",
    "postAttachCommand": "echo 'Codespace ready!'",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    }
}
